@model List<CasoEstudio2.Models.CasasModel>

<h2>Consulta de Casas</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Usuario</th>
            <th>Estado</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var casa in Model)
        {
            <tr>
                <td>@casa.DescripcionCasa</td>
                <td>@casa.PrecioCasa.ToString("N2")</td>
                <td>@casa.UsuarioAlquiler</td>
                <td>@casa.Estado</td>
                <td>@casa.FechaAlquiler</td>
            </tr>
        }
    </tbody>
</table>
